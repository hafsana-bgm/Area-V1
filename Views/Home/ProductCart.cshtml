@{
    ViewData["Title"] = "Product Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Area_v1.Models.Product>

<!-- Cart Start -->
<div class="cart-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-page-inner">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody class="align-middle">
                                @{
                                    foreach(var data in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="img">
                                                    <a href="#"><img src="~/UploadImage/@data.Image" alt="Image"></a>
                                                    <p>@data.Name</p>
                                                </div>
                                            </td>
                                            <td>@data.Price</td>
                                            <td>
                                                <div class="qty">
                                                    <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                                    <input type="text" value="1">
                                                    <button class="btn-plus" onclick="updateCount()"><i class="fa fa-plus"></i></button>
                                                </div>
                                            </td>
                                            <td>$99</td>
                                            <td><a asp-route-id="@data.ProductId" asp-action="CartDelete" asp-controller="Home"><i class="fa fa-trash"></i></a></td>
                                        </tr>
                                    }
                                }
                                
                              
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <script>
                function updateCount()
                {
                    let price = document.getElementById('Price').ProductId.text;
                    let price = document.getElementById('Price').ProductId.text;
                    document.getElementById('Total').value = price +''+ price;
                    


                }

            </script>
            <div class="col-lg-4">
                <div class="cart-page-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="coupon">
                                <input type="text" placeholder="Coupon Code">
                                <button>Apply Code</button>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="cart-summary">
                                <div class="cart-content">
                                    <h1>Cart Summary</h1>
                                    <p>Sub Total<span>$99</span></p>
                                    <p>Shipping Cost<span>$1</span></p>
                                    <h2>Grand Total<span>$100</span></h2> 
                                <div class="cart-btn">
                                    <button>Update Cart</button>
                                    <button>Checkout</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->